<Window x:Class="ProjeTyö1.EnterName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vamk Simulator" Height="400" Width="600" MaxHeight="400" MaxWidth="600" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" Loaded="Window_Loaded">
    <Grid Background="LightSteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtAlkuTeksti" TextWrapping="Wrap" Grid.ColumnSpan="3" VerticalAlignment="Center" MaxWidth="400" MinHeight="225" Background="White" FontSize="19"/>
        <TextBox x:Name="txtNimi" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0" MaxLength="10"
                FontSize="20" FontWeight="SemiBold" MaxWidth="160" MinWidth="160" MaxHeight="40" KeyDown="txtNimi_KeyDown" />
    </Grid>
</Window>
