<Window x:Class="ProjeTyö1.HelloNimi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vamk Simulator" Height="400" Width="600" MaxHeight="400" MaxWidth="600" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >
    <Grid Background="LightSteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtHelloNimi" TextWrapping="Wrap" Grid.ColumnSpan="3" VerticalAlignment="Center" MaxWidth="400" MinHeight="225" Background="White" FontSize="19" />
        <Button x:Name="btnContinue2" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0"
                FontSize="20" FontWeight="SemiBold" MinWidth="160" MaxHeight="40" Content="Continue" Click="btnContinue2_Click"/>
    </Grid>
</Window>
